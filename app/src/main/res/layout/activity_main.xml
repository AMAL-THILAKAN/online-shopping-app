<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#11cfc5"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
    android:id="@+id/linearLayout1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
        <TextView
            android:id="@+id/textView1"
            android:layout_width="129dp"
            android:layout_height="157dp"
            android:text="Here's your first step with us"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginTop="70dp"
            android:layout_marginStart="30dp"
             />

        <ImageView
            android:id="@+id/shoppingImg"
            android:layout_width="0dp"
            android:layout_height="157dp"
            android:layout_marginTop="70dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/shopping"
            tools:ignore="ContentDescription"
            />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView1"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginHorizontal="30dp"
        app:cardCornerRadius="10dp"
        >
        <LinearLayout
            android:id="@+id/linearCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/ThemeOverlay.Material3.TextInputEditText.FilledBox"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="8dp"
            android:hint="Enter name"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textEditTextName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                 />


        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/ThemeOverlay.Material3.TextInputEditText.FilledBox"
            android:id="@+id/textInputLayoutEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="8dp"
            android:hint="Enter E-mail"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textEditTextEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                 />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/ThemeOverlay.Material3.TextInputEditText.FilledBox"
            android:id="@+id/textInputLayoutPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="8dp"
            android:hint="Enter Password"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textEditTextPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/ThemeOverlay.Material3.TextInputEditText.FilledBox"

            android:id="@+id/textInputLayoutConfirmPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="8dp"
            android:hint="Confirm Passwod"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textEditTextConfirmPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/registerButton"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="110dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#11cfc5"
            android:text="REGISTER" />

        <TextView
            android:id="@+id/haveAnAcc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="already have an account ?"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginStart="90dp"
            android:textColor="#11cfc5"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>